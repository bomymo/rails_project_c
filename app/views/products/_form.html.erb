<div class="col-md-offset-2 col-md-8 work-box work-box-top work-box-product">

  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<!--    <div class="field">
      <#%= form.label :name %>
      <#%= form.text_field :name, id: :product_name %>
    </div>
-->

    <div class="form-group">
      <%= form.label :name, for: "name-form" %>
      <%= form.text_field :name, id: :product_name, class: "form-control has-tooltip", id: "name-form", title: "Product name" %>
    </div>

    <div class="form-group">
      <%= form.label :description, for: "description-form" %>
      <%= form.text_area :description, id: :product_description, class: "form-control", id: "description-form", title: "Description" %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :colour, "Color", for: "color-form" %>
        <%= form.text_field :colour, id: :product_colour, class: "form-control", id: "color-form", title: "Color" %>
      </div>

      <div class="form-group col-md-6">
        <%= form.label :price, for: "price-form" %>
        <%= form.text_field :price, class: "form-control", id: "price-form", title: "Price", maxlength: "9" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :image_url, "Image URL", for: "image-form" %>
      <%= form.text_field :image_url, id: :product_image_url, class: "form-control", id: "image-form", title: "Image URL" %>
    </div>

    <%= form.submit 'Submit', class: 'btn btn-primary' %>
    
  <% end %>
</div><!-- /work-box -->
<div class="col-md-12 bottom-of-page"></div>
