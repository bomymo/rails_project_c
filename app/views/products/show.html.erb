<p id="notice"><%= notice %></p>

<div class="work-box work-box-top">
  <p class="standard-text">
    <strong>Name:</strong>
    <span class="chewy-pop text-pop">
      <%= @product.name %>
    </span>
  </p>

  <p class="standard-text standard-space">
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p class="standard-text standard-space">
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p class="standard-text standard-space">
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p class="standard-text standard-space">
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <div class="work-box-top"><!--(2)-->
    <span class="chewy-little">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </span>
  </div><!-- end work-box-top (2)-->
</div><!-- end work-box -->
