<p id="notice"><%= notice %></p>

<div class="work-box">
  <h1 class="chewy-pop">Products</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th class="basic-grid">Description</th>
        <th class="basic-grid">Image url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td class="basic-grid"><%= product.description %></td>
          <td class="basic-grid"><%= product.image_url %></td>
          <td>&nbsp;</td> <!-- this fixes a spacing problem -->
          <td class="chewy-little"><%= link_to 'Show', product %></td>
          <td class="chewy-little"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="chewy-little"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <span class="chewy-little">
    <%= link_to 'New Product', new_product_path %>
  </span>
</div><!-- end work-box -->



