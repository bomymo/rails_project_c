<div class="col-md-offset-2 col-md-8 work-box">
  <div class="yield">
    <h1>Create an account for <span class="chewy-pop">Pop 60!</span></h1>
  </div>

  <div class="yield">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
        <div class="form-group">
          <%= f.label :email, class: "text-left" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email", required: "required" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "text-left" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter a Password", required: "required" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "text-left" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Reenter the Password", required: "required" %>
        </div>
      </div>
      <div class="row">
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary chewy-button" %>
        </div>
      </div>
      <div class="row chewy-little">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div><!-- /yield -->
</div><!-- /work-box -->
    
